<p class="text-wrap text-left text-sm mb-2r">This recommendation information was generated by a Large
  Language Model and while highly reliable, should still be subjected to careful verification.</p>
<div class="grid grid-cols-1 md:grid-cols-1">
  <dl class="divide-y divide-gray-200">
    <div class="px-4 py-6 md:grid md:grid-cols-3 md:gap-4 sm:px-0">
      <dt class="text-sm/6 font-bold text-gray-900 text-left">AI Accessibility Recommendation</dt>
      <% rec_from_inferences = document.accessibility_recommendation_from_inferences %>
      <% rec_from_db = document.accessibility_recommendation %>
      <% if rec_from_inferences == rec_from_db %>
        <dd class="mt-1 text-sm/6 text-gray-700 sm:col-span-2 sm:mt-0 text-left"><%= document.accessibility_recommendation_from_inferences %></dd>
      <% else %>
        <dd class="mt-1 text-sm/6 text-gray-700 sm:col-span-2 sm:mt-0 text-left"><%= rec_from_inferences %> (User
          override: <%= rec_from_db %>)
        </dd>
      <% end %>
    </div>
    <% document.exceptions(false).each do |exception| %>
      <% info = DocumentInference::INFERENCE_TYPES[exception.inference_type.to_sym] %>
      <div class="px-4 py-6 md:grid md:grid-cols-3 md:gap-4 sm:px-0 <%= exception.inference_value == "true" ? "bg-green-100" : "" %>">
        <dt class="text-sm/6 font-medium text-gray-900 text-left text-wrap">
          <br>
          <span class="font-bold"><%= info[:label] %>:</span>
          <%= exception.inference_value.to_s.downcase  == "true" ? "Yes" : "No" %>
          <a href="<%= info[:url] %>" target="_blank"><i class="fas fa-info-circle ml-1"></i><span class="hidden">See ADA Fact Sheet</span></a>
        </dt>
        <dd class="mt-1 text-sm/6 text-gray-700 sm:col-span-2 sm:mt-0 text-wrap text-left"><%= exception.inference_reason %></dd>
      </div>
    <% end %>
  </dl>
</div>