<%# Link to the "Next" page
  - available local variables
    url:           url to the next page
    current_page:  a page object for the currently displayed page
    total_pages:   total number of pages
    per_page:      number of items to fetch per page
    remote:        data-remote
-%>
<% if current_page.last? %>
  <span class="px-3 py-2 text-sm font-medium bg-white text-gray-400 border border-gray-300 rounded-md cursor-not-allowed">
    <i class="fas fa-chevron-right"></i>
  </span>
<% else %>
  <%= link_to url, rel: 'next', remote: remote, class: "px-3 py-2 text-sm font-medium bg-white text-gray-700 hover:bg-gray-100 border border-gray-300 rounded-md" do %>
    <span class="sr-only">Next page</span>
    <i class="fas fa-chevron-right"></i>
  <% end %>
<% end %>
