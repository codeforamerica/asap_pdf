<%# Link to the "First" page
  - available local variables
    url:           url to the first page
    current_page:  a page object for the currently displayed page
    total_pages:   total number of pages
    per_page:      number of items to fetch per page
    remote:        data-remote
-%>
<% if current_page.first? %>
  <span class="px-3 py-2 text-sm font-medium bg-white text-black border border-black rounded-md">
    <i class="fas fa-angles-left"></i>
  </span>
<% else %>
  <%= link_to url, remote: remote, class: "px-3 py-2 text-sm font-medium bg-white text-gray-700 hover:bg-gray-100 border border-gray-300 rounded-md" do %>
    <span class="sr-only">First page</span>
    <i class="fas fa-angles-left"></i>
  <% end %>
<% end %>
